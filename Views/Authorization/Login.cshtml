@model OrderEase.Models.Web.LoginModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav>
    <ul class="menu">
        <li><a asp-action="Registration" asp-controller="Authorization">Регистрация</a></li>
    </ul>
</nav>

<div class="page">
    <h2>Вход на сайт</h2>
    <form asp-action="Login" asp-controller="Authorization" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <p>
                <div>
                    <label asp-for="Email">Введите Email</label><br />
                    <input type="text" asp-for="Email" />
                    <span asp-validation-for="Email" />
                </div>
            </p>
            <p>
                <div>
                    <label asp-for="Password">Введите пароль</label><br />
                    <input asp-for="Password" />
                    <span asp-validation-for="Password" />
                </div>
            </p>
            <div>
                <input type="submit" value="Войти" class="btn" />
            </div>
        </div>
    </form>
</div>



